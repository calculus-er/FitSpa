# Firebase Configuration
# Copy this file to .env.local and fill in your actual Firebase credentials

# Get these values from your Firebase project settings
VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# Optional: For Firebase Functions (local development)
VITE_FIREBASE_FUNCTIONS_REGION=us-central1

# Optional: For analytics and monitoring
VITE_ENABLE_ANALYTICS=true
VITE_SENTRY_DSN=your_sentry_dsn_here

# Optional: For feature flags
VITE_ENABLE_NEW_FEATURES=false
VITE_ENABLE_DEBUG_MODE=false
